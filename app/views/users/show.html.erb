<div class="login">
  <div class="container">
   
    <%= form_for(@user) do |f| %>
      <%= f.label :first_name %>
      <%= f.text_field :first_name %>
    
      <%= f.label :last_name %>
      <%= f.text_field :last_name %>
    
      <%= f.label :email %>
      <%= f.email_field :email %>
    
      <%= f.submit "Update my account" %>
    <% end %>
		
    <% if flash[:success] %>
    	<div class="success"><%= flash[:success] %></div>
  	<% end %>
  </div>
</div>